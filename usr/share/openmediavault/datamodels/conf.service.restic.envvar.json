{
  "type": "config",
  "id": "conf.service.restic.envvar",
  "title": "Restic environment variables",
  "queryinfo": {
    "xpath": "//services/restic/envvars/envvar",
    "iterable": true,
    "idproperty": "uuid"
  },
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuidv4"
    },
    "envname": {
      "type": "string"
    },
    "envvalue": {
      "type": "string"
    },
    "reporef": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "enum": [
            "shared"
          ]
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ],
      "default": ""
    }
  }
}
