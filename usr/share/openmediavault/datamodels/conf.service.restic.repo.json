{
  "type": "config",
  "id": "conf.service.restic.repo",
  "title": "Restic repository",
  "queryinfo": {
    "xpath": "//services/restic/repos/repo",
    "iterable": true,
    "idproperty": "uuid"
  },
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuidv4"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "local"
      ],
      "default": "local"
    },
    "sharedfolderref": {
      "type": "string",
      "oneOf": [
        {
          "type": "string",
          "format": "uuidv4"
        },
        {
          "type": "string",
          "maxLength": 0
        }
      ],
      "default": ""
    },
    "passphrase": {
      "type": "string"
    },
    "skipinit": {
      "type": "boolean"
    }
  }
}
